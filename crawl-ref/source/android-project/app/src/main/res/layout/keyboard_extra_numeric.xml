<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/keyboard_extra_numeric"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <Space
            android:id="@+id/space_top_left"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0"/>

        <Button
            android:id="@+id/key_extra_7"
            android:tag="14"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="\u2196\ufe0e"
            android:padding="0dp"
            android:background="@drawable/transparent_button"/>

        <Button
            android:id="@+id/key_extra_8"
            android:tag="15"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="\u2191\ufe0e"
            android:padding="0dp"
            android:background="@drawable/transparent_button"/>

        <Button
            android:id="@+id/key_extra_9"
            android:tag="16"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="\u2197\ufe0e"
            android:padding="0dp"
            android:background="@drawable/transparent_button"/>

        <Space
            android:id="@+id/space_top_right"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <Space
            android:id="@+id/space_middle_left"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0"/>

        <Button
            android:id="@+id/key_extra_4"
            android:tag="11"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="\u2190\ufe0e"
            android:padding="0dp"
            android:background="@drawable/transparent_button"/>

        <Button
            android:id="@+id/key_extra_5"
            android:tag="12"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="Rest"
            android:padding="0dp"
            android:background="@drawable/transparent_button"/>

        <Button
            android:id="@+id/key_extra_6"
            android:tag="13"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="\u2192\ufe0e"
            android:padding="0dp"
            android:background="@drawable/transparent_button"/>

        <Space
            android:id="@+id/space_middle_right"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <Space
            android:id="@+id/space_bottom_left"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0"/>

        <Button
            android:id="@+id/key_extra_1"
            android:tag="8"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="\u2199\ufe0e"
            android:padding="0dp"
            android:background="@drawable/transparent_button"/>

        <Button
            android:id="@+id/key_extra_2"
            android:tag="9"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="\u2193\ufe0e"
            android:padding="0dp"
            android:background="@drawable/transparent_button"/>

        <Button
            android:id="@+id/key_extra_3"
            android:tag="10"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="\u2198\ufe0e"
            android:padding="0dp"
            android:background="@drawable/transparent_button"/>

        <Space
            android:id="@+id/space_bottom_right"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0"/>

    </LinearLayout>

</LinearLayout>
