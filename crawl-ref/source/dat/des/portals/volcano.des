-- ###
-- # Monster functions:

-- This function sets up two slots of monsters: in general, the first
-- slot (say, 1) is the "surrounding" guardians, while the third slot
-- is a "levelled" up version of the 1s. It's currently balanced for
-- two or three 1s, and one 2, alongside scattered lone 1s.
--
-- HangedMan, March 2013:
-- Humanoids mostly consistent of orcs, centaurs, or ogres with fiery
-- equipment, alongside rare salamanders, deep elves, and mixed others.
-- Otherwise, there are mixed sets of "natural" beasts, demons,
-- and mostly-unliving monsters, with potentially a mix of all three.
-- The weight for the first half is (slightly) lowered in lair.
-- There are still a few uniques to echo the old set's intent, of course.
--

function fiery_guardians (e, intelligent, village)
    local humanweight = 5
    if you.in_branch("Lair") then
        humanweight = 4
    end
    local flame = "ego:flaming ident:type"
    local res = "ego:fire_resistance ident:type"

    -- Weighings back and forth with humanoids or not.
    if crawl.x_chance_in_y(humanweight, "10") or village or intelligent then
        local warriorstuff = "long sword " .. flame
                             .. " | war axe " .. flame
                             .. " | trident " .. flame
                             .. " . ring mail " .. res
                             .. " | scale mail " .. res
        local knightstuff = "great mace " .. flame
                            .. " | great sword " .. flame
                            .. " | glaive " .. flame
                            .. " . chain mail " .. res
        local magestuff = "spear " .. flame
                          .. " | whip " .. flame
                          .. " . robe " .. res
        local ogrestuff = "great mace " .. flame .. " | giant club " .. flame
        local centaur = "centaur ; shortbow ego:none . arrow ego:flame"
        local centaurstuff = "robe " .. res
                             .. " . shortbow ego:flaming ident:type . arrow"
        local elfstuff = "long sword " .. flame
                         .. " | short sword " .. flame
                         .. " . leather armour " .. res
                         .. " | ring mail " .. res
        local dracstuff = "scimitar " .. flame
                          .. " | halberd " .. flame
                          .. " | broad axe " .. flame .. " . cloak"
        if village then
            e.mons("orc warrior ; " .. warriorstuff
                  .. " / two-headed ogre ; " .. ogrestuff .. " . " .. ogrestuff
                  .. " / " .. centaur
                  .. " / deep elf mage ; " .. elfstuff)
            e.mons("fire bat / hog / hell hound w:3")
            return
        end
        local set_weight = crawl.random2(12)
        if set_weight < 3 then
            e.mons("orc warrior ; " .. warriorstuff)
            e.kmons("2 = Urug ; javelin . " .. knightstuff
                    .. " / orc knight w:20 ; " .. knightstuff
                    .. " / orc sorcerer w:20 ; " .. magestuff
                    .. ", orc knight ;" .. knightstuff
                    .. " / orc sorcerer ; " .. magestuff)
        elseif set_weight < 6 then
            e.mons("two-headed ogre ; " .. ogrestuff .. " . " .. ogrestuff
                   .. " / hill giant w:5 ; " .. ogrestuff
                   .. " / ogre w:5 ; " .. ogrestuff)
            e.kmons("2 = ogre mage w:40 ; " .. magestuff
                    .. " / Erolcha ; " .. ogrestuff .. " . robe " .. res
                    .. ", ogre mage ; " .. magestuff)
        elseif set_weight < 9 then
            e.mons(centaur
                   .. " / yaktaur w:5 ; arbalest . bolt ego:flame ident:type")
            e.kmons("2 = Nessos / centaur warrior w:40 ; " .. centaurstuff
                    .. ", centaur warrior ; " .. centaurstuff)
        elseif set_weight < 10 then
           e.mons("salamander")
           e.mons("salamander mystic")
        elseif set_weight < 11 then
           e.mons("deep elf mage ; " .. elfstuff)
           e.mons("deep elf knight ; " .. elfstuff)
        else
        -- Mix of the above and worse.
           e.mons("orc warrior ; " .. warriorstuff
                  .. " / two-headed ogre ; " .. ogrestuff .. " . " .. ogrestuff
                  .. " / " .. centaur
                  .. " / deep elf mage ; " .. elfstuff)
           e.kmons("2 = Harold ; throwing net . halberd " .. flame
                   .. " . ring mail " .. res
                   .. " / red draconian ; " .. dracstuff
                   .. " / mottled draconian ; " .. dracstuff
                   .. ", red draconian ; " .. dracstuff
                   .. " / mottled draconian ; " .. dracstuff)
        end
    else
    -- Unintelligent map! We are now going to use a mixed pack.
        local hellknight = "hell knight ; scimitar " .. flame
                           .. " | halberd " .. flame
                           .. " | broad axe " .. flame
                           .. " . chain mail " .. res
        local set_weight = crawl.random2(8)
        if set_weight < 3 then
            -- "Lair"-esque monster pack.
            e.mons("komodo dragon w:3 / fire bat band / mottled dragon"
                   .. " / hell hound w:3")
            e.mons("manticore w:4 / lindwurm w:4 / fire dragon w:1"
                   .. " / fire crab w:1")
        elseif set_weight < 5 then
            -- "Demonic" monster pack.
            e.mons("crimson imp / toenail golem / hell hound w:8"
                   .. " / red devil ; trident ego:flaming ident:type")
            e.mons("efreet / sun demon / smoke demon / " .. hellknight)
        elseif set_weight < 7 then
            -- Unliving themed pack.
            e.mons("gargoyle / fire elemental / toenail golem w:5"
                   .. " / red ugly thing / earth elemental / fire vortex")
            e.mons("efreet / molten gargoyle")
        else
            -- Let's go all out.
            e.mons("hell hound / toenail golem / fire elemental"
                   .. " / manticore")
            e.mons(hellknight .. " / fire crab")
        end
    end
end

function volcano_caves_collapse_doorways(data, triggerable, triggerer,
                                         marker, ev)
  if triggerer.type ~= "turn" or triggerer.sub_type ~= "countdown" then
    return
  end

  local x, y = marker:pos()
  local you_x, you_y = you.pos()

  if you_x == x and you_y == y then
    crawl.mpr("There is a rumble as the volcano erupts. The roof shakes.",
              "warning")
    return
  end

  if you.see_cell(marker:pos()) then
    crawl.mpr("The volcano erupts! Nearby, a roof collapses.", "warning")
  else
    crawl.mpr("There is a rumble as the volcano erupts. The roof shakes.",
              "warning")
  end
  dgn.terrain_changed(x, y, "stone_wall", false, false)
  dgn.colour_at(x, y, "lightred")
  dgn.apply_area_cloud(x, y, 1, 6, 1, 10, "grey smoke", "other", -1)

  -- Don't collapse same doorway twice.
  triggerable:remove(marker)
end


function volcano_overflow_convert_lava(data, triggerable,
                                       triggerer, marker, ev)
  if triggerer.type ~= "turn" or triggerer.sub_type ~= "countdown" then
    return
  end

  data.lava_phase = data.lava_phase + 1
  local lp = data.lava_phase
  local my_slaves = {}

  -- So we don't have to duplicate code too much.
  local function convert_slaves_to_lava (mslaves, opposite)
   local yp = dgn.point(you.pos())
    for _, pos in ipairs(mslaves) do
      if pos ~= yp then
        if opposite then
          dgn.terrain_changed(pos.x, pos.y, "floor", false, false)
        else
          dgn.terrain_changed(pos.x, pos.y, "lava", false, false)
        end
      end
    end
  end

  if lp == 1 then
    crawl.mpr("The ground shudders ominously.", "warning")
  elseif lp == 2 then
    my_slaves = dgn.find_marker_positions_by_prop("lava_phase", 2)
    crawl.mpr("In the distance, the volcano explodes with a roar! Lava spreads "
               .. "onto the path.", "warning")
    convert_slaves_to_lava(my_slaves)
  elseif lp == 3 then
    crawl.mpr("The air is thick with the scent of sulphur.", "warning")
  elseif lp == 4 then
    my_slaves = dgn.find_marker_positions_by_prop("lava_phase", 4)
    crawl.mpr("There is another distant roar. More lava overflows!", "warning")
    convert_slaves_to_lava(my_slaves)
  elseif lp == 5 then
    crawl.mpr("The ground moves violently!", "warning")
  elseif lp == 6 then
    my_slaves = dgn.find_marker_positions_by_prop("lava_phase", 6)
    crawl.mpr("The volcano erupts again! A thin layer of lava overflows to " ..
              "fill the cavern.", "warning")
    convert_slaves_to_lava(my_slaves)
  elseif lp == 7 then
    my_slaves = dgn.find_marker_positions_by_prop("lava_phase", 6)
    crawl.mpr("The ground shudders. Some of the lava has hardened enough to walk " ..
              "over!", "warning")
    convert_slaves_to_lava(my_slaves, true)
  elseif lp == 8 then
    my_slaves = dgn.find_marker_positions_by_prop("lava_phase", 4)
    crawl.mpr("The ground shudders. Some of the lava has hardened enough to walk " ..
              "over!", "warning")
    convert_slaves_to_lava(my_slaves, true)
  elseif lp == 9 then
    my_slaves = dgn.find_marker_positions_by_prop("lava_phase", 2)
    crawl.mpr("The ground shudders. Some of the lava has hardened enough to walk " ..
              "over!", "warning")
    convert_slaves_to_lava(my_slaves, true)
  end
end

}}

